<div class="bookmark-content">
  <h2>Add Bookmark</h2>
  <div class="row">
    <form action="/user/save-bookmark" class="col s12" method="POST">
      <div class="row">
        <div class="input-field col s12">
          <input name="url" type="text" class="validate">
          <label>Url:</label>
        </div>
        <div class="input-field col s12">
          <input name="title" type="text" class="validate">
          <label>Title:</label>
        </div>
        <div class="input-field col s12">
          <input name="description" type="text" class="validate">
          <label>Description:</label>
        </div>
        <div class="input-field col s12">
          <select name="folder">
            {{#each folders}}
            <option value="{{this._id}}">{{this.name}}</option>
            {{/each}}
          </select>
        </div>
        <div class="input-field col s12">
          <div class="switch">
            <label>
              public
              <input type="checkbox" name="is_public" value="false">
              <span class="lever"></span>
              private
            </label>
          </div>
        </div>
      </div>
      <button class="waves-effect waves-light btn-large login-module-btn">Save</button>
    </form>
  </div>
</div>