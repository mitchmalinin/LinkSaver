{{>nav}}
<div class="dashboard">
  {{>sidebar}}
  {{!-- all the user content on main display --}}
  <div class="total-user-content">
    <div class="one-user-card">
      <div class="user-card-single">
        <div class="card-img" style="background-image: url('{{data.userInfo.img}}')">
        </div>
        <div class="user-card-info">
          <label for="">Name:</label>
          <h3>{{data.userInfo.firstName}} <span>{{data.userInfo.lastName}}</span></h3>
          <label for="">Username:</label>
          <h4>{{data.userInfo.username}}</h4>
          <div class="social-info">
            <a href="">Following: {{data.userInfo.following.length}}</a>
            <a href="">Followers: {{data.userInfo.followers.length}}</a>
          </div>
        </div>
      </div>
    </div>
    <h5>Public Bookmarks: </h5>
    <div class="private-bookmarks">
      {{#each data.userBookmarks}}
      {{> userBookmarkCard  bookmark= this folders=../folders}}
      {{/each}}
    </div>
    <h5>Public Folders: </h5>
    <div class="private-folders">
      {{#each data.userFolders}}
      {{> userFolderCard}}
      {{/each}}
    </div>

  </div>
</div>